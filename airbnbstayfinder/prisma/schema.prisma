generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model AirbnbStay {
  id                   String @id @default(uuid())
  room_id              String @unique
  title                String
  subTitle             String
  isFreeCancellation   Boolean
  price                Float
  priceWithoutDiscount Float?

  rating      Float?
  ratingCount Int?

  personCapacity Int?
  hostName       String?
  hostId         String?

  images AirbnbStayImage[]

  // AI Response
  isCompatible       Boolean
  compatibilityScore Int
  resume             String

  interest Boolean?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AirbnbStayImage {
  id String @id @default(uuid())

  stayId String?
  stay   AirbnbStay? @relation(fields: [stayId], references: [id])

  imageUrl String
}
